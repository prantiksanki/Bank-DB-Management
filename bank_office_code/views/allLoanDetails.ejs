    <% if (locals.Loans) { %>
        <table>
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Customer Id</th>
                    <th>Loan Id</th>
                    <th>Loan Type</th>
                    <th>Ammount</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% if (Array.isArray(Loans) && Loans.length > 0) 
                { %>
                    <% Loans.forEach((loan, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= loan.custid %></td>
                            <td><%= loan.loanId %></td>
                            <td><%= loan.loanType %></td>
                            <td><%= loan.ammount %></td>
                            <td><%= loan.stat %></td>
                        </tr>
                    <% }); %>
                <% } 
                
                else 
                { %>
                    <tr>
                        <td colspan="6">No loan records found.</td>
                    </tr>
                <% } %>
            </tbody>
            
        </table>
    <% } %>
</div>
</body>
</html>
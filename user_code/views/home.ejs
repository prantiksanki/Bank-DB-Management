<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HCL Bank</title>
    <script>
        // function showTransactionForm() {
        //     document.getElementById('transactionForm').style.display = 'block';
        // }

        // function showLoanApplySection() {
        //     document.getElementById('loanForm').style.display = 'block';
        // }

        function toggleVisibility(formId) {
        const form = document.getElementById(formId);
        if (form.style.display === 'block') {
            form.style.display = 'none';
        } else {
            form.style.display = 'block';
        }
    }

    </script>
    <style>

    body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(to bottom, #ffffff, #eaf0f6);
        margin: 0;
        padding: 20px;
        color: #333;
    }

    h1, h2 {
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
    }

    .section {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 40px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }

    button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    button:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    button:focus {
        outline: none;
        box-shadow: 0 0 6px rgba(0, 123, 255, 0.5);
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-top: 20px;
    }

    label {
        font-size: 14px;
        font-weight: bold;
        text-align: left;
    }

    input, select {
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 16px;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    input:focus, select:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        outline: none;
    }

    .balance-display {
        font-size: 1.2em;
        font-weight: bold;
        color: #28a745;
    }

    /* Responsive design */
    @media (max-width: 600px) {
        .section {
            padding: 15px;
        }

        button {
            font-size: 14px;
            padding: 8px 16px;
        }

        input, select {
            font-size: 14px;
            padding: 8px;
        }
    }
</style>

</head>
<body>
    <h1>HCL Bank</h1>

    <!-- Bank Transfer Section -->
    <div class="section">
        <h2>Bank Transfer</h2>
        <button onclick="toggleVisibility('transactionForm')">Transaction</button>
        <form id="transactionForm" action="/transfer" method="POST" style="display: none;">
            <label for="recipientAccount">Recipient Account Number:</label>
            <input type="text" id="recipientAccount" name="recipientAccount" required>
            <br><br>

            <label for="amount">Amount:</label>
            <input type="number" id="amount" name="amount" required min="1" step="0.01">
            <br><br>

            <button type="submit">Submit</button>
        </form>
    </div>

<!-- User Account Balance Section -->
<div class="section">
    <h2>User Account Balance</h2>
    <% if (user) { %>  <!-- Check if user (balance) is available -->
        <p class="balance-display">Balance: <%= user.balance %></p>  <!-- Directly display the balance string -->
    <% } else { %>
        <p class="balance-display">Please log in to see your balance.</p>
    <% } %>
</div>




    <!-- Loan Application Section -->
    <div class="section">
        <h2>Apply for Loan</h2>
        <button onclick="toggleVisibility('loanForm')" >Apply Loan</button>
        <form id="loanForm" action="/loan" method="POST" style="display: none;">
            <label for="loanType">Choose loan type:</label>
            <select name="loanType" id="loanType">
                <option value="Home">Home</option>
                <option value="Education">Education</option>
                <option value="Car">Car</option>
                <option value="Gold">Gold</option>
            </select>
            <br><br>

            <label for="ammount">Loan Amount:</label>
            <input type="number" id="ammount" name="ammount" required min="1" step="0.01">
            <br><br>

            <button type="submit">Apply</button>
        </form>
    </div>

</body>
</html>
